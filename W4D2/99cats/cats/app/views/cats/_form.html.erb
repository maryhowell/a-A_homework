<label for="cat_color">What color is your cat?</label>
  <select name="cat[color]" id="cat_color">
    <option></option>
      <% Cat::COLORS.each do |color| %>
      <option
          <%= cat.color == color ? "selected" : "" %>
          value="<%= color %>">
        <%= color.upcase %>
      </option>
    <% end %>
  </select>

<label for="cat_birth_date">What is your cats birthday?</label>
  <input type="date" name="cat[birth_date]" id="cat_birth_date" value="<%=cat.birth_date%>">

<label for="cat_description">Tell us bout dat cat tho</label>
  <input type="textarea" name="cat[description]" id="cat_description" value="<%=cat.description%>">

<% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
 <input type="submit" value="<%= submit_text %>">

</form>
