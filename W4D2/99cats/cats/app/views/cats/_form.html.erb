<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">

 <label for="cat_name">What is your cat's name? </label>
 <input type="text" name="cat[name]" id="cat_name" value="<%= cat.name %>">

<!-- <label for="cat_sex">What is your cat's gender? </label> -->
  <!-- <input type="radio" name="cat[sex]" id="cat_sex" value="M"> Male<br> -->
  <!-- <input type="radio" name="cat[sex]" id="cat_sex" value="F"> Female<br> -->

<input
    type="radio"
    name="cat[sex]"
    value="M"
    id="cat_sex_male"
    <%= cat.sex == "M" ? "checked" : "" %>>
  <label for="cat_sex_male">Male</label>
  <input
    type="radio"
    name="cat[sex]"
    value="F"
    id="cat_sex_female"
    <%= cat.sex == "F" ? "checked" : "" %>>
  <label for="cat_sex_female">Female</label>
  <br>

