<h1> <%= @cat.name %> </h1>
 <img src="http://edgecats.net/?<%= @cat.id %>" alt="">
<table>
    <tr>
      <th> Birth Date </th>
      <th> Color </th>
      <th> Gender </th>
      <th> Description </th>
    </tr>
    <tr>
      <td> <%= @cat.birth_date %></td>
      <td> <%= @cat.color %></td>
      <td> <%= @cat.sex %></td>
      <td> <%= @cat.description %></td>
    </tr>
</table>
  <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

  <h2> Rental Requests </h2>

  <table>
    <tr>
      <th> Start Date</th>
      <th> End Date </th>
      <th> Status </th>
    </tr>
    <tr>
      <% @cat.rental_requests.order("start_date").each do |rental_request| %>
        <td><%= rental_request.start_date %></td>
        <td><%= rental_request.end_date %></td>
        <td><%= rental_request.status %><br/></td>

      <% end %>
        <br/>
    </tr>
  </table>
